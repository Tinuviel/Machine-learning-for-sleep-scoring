import scipy.io
import random 
import numpy as np

matData = scipy.io.loadmat('rat3_all.mat')
matrixA = matData['EEGandEMG']
matrixB = matData['labels'] 
A = matrixA.T
B = matrixB.T

antaltest = 4000
antaltrain = 15000 #man skulle kunna göra något snyggt med len(A) här typ

testindex = np.random.randint(A.shape[0], size=antaltest)
trainindex = np.random.randint(A.shape[0], size=antaltrain)

x_test=A[testindex, :]
y_test=B[testindex, :]
x_train = A[trainindex, :]
y_train = B[trainindex, :]

#samma element lär användas i både train och test, det är lite fult
